	"property-details": {
		"id": "property-details",
		"title": "Property Location",
		"questions": [
			{
				"id": "property_state_name",
				"bindsTo": "{{propertyStateName}}",
				"contextKey": "propertyStateName",
				"type": "select",
				"required": true,
				"question": "select state of property location",
				"uiMeta": {
					"placeholder": "Select State"
				},
				"options": {
					"dynamicSource": "getAllStates"
				}
			},
			{
				"id": "property_city_name",
				"bindsTo": "{{propertyCityName}}",
				"contextKey": "propertyCityName",
				"type": "select",
				"required": true,
				"question": "select city of property location",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": {
					"dynamicSource": "getCitiesForSelectedState",
					"dependsOn": "property_state_name"
				},
				"validation": { "errorMessage": "Please select a state first." }
			},
			{
				"id": "residence_option_same",
				"bindsTo": "{{residenceOptionSame}}",
				"contextKey": "residenceOptionSame",
				"type": "radio",
				"required": true,
				"question": "If the residence location is the same as the property location?",
				"info": "For an NRI applicant, this should be addressed from the perspective of the GPA (Power of Attorney).",
				"whyAsked": "why asked",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": [
					{
						"label": "Yes",
						"value": "Yes"
					},
					{
						"label": "No",
						"value": "No"
					}
				],
				"showWhen": {
					"state_and_city_selected": [
						{ "var": "property_state_name" },
						{ "var": "property_city_name" }
					]
				}
			},
			{
				"id": "residence_state_name",
				"bindsTo": "{{residenceStateName}}",
				"contextKey": "propertyStateName",
				"type": "select",
				"required": true,
				"question": "select state of residence location",
				"uiMeta": {
					"placeholder": "Select State"
				},
				"options": {
					"dynamicSource": "getAllStates"
				},
				"showWhen": {
					"==": [
						{
							"var": "residence_option_same"
						},
						"No"
					]
				}
			},
			{
				"id": "residence_city_name",
				"bindsTo": "{{residenceCityName}}",
				"contextKey": "residenceCityName",
				"type": "select",
				"required": true,
				"question": "select city of residence location",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": {
					"dynamicSource": "getCitiesForSelectedState",
					"dependsOn": "property_state_name"
				},
				"validation": { "errorMessage": "Please select a state first." },
				"showWhen": {
					"==": [
						{
							"var": "residence_option_same"
						},
						"No"
					]
				}
			}
		]
	}
