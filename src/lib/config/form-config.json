{
	"first_page": {
		"id": "how-can-we-help",
		"title": "Let's Rock!",
		"nextButtonVisibility": {
			"mode": ["allRequiredAnswered"]
		},
		"questions": [
			{
				"id": "loan_name",
				"bindsTo": "{{loanName}}",
				"contextKey": "loanName",
				"type": "radio",
				"required": true,
				"question": "What are you looking for?",
				"options": [
					{ "label": "Home Loan", "value": "Home Loan" },
					{ "label": "Plot Loan", "value": "Plot Loan" },
					{ "label": "Loan Against Property (LAP)", "value": "Loan Against Property" },
					{ "label": "Business Loan", "value": "Business Loan" },
					{ "label": "Professional Loan", "value": "Professional Loan" },
					{ "label": "Personal Loan", "value": "Personal Loan" }
				]
			},
			{
				"id": "product_type",
				"bindsTo": "{{productType}}",
				"contextKey": "productType",
				"type": "radio",
				"required": true,
				"question": "Please choose any one.",
				"options": [
					{
						"label": "LAP",
						"value": "LAP",
						"showWhen": { "==": [{ "var": "loan_name" }, "Loan Against Property"] }
					},
					{
						"label": "Drop-line Overdraft (DOD)",
						"value": "Drop-line OverDraft (DOD)",
						"showWhen": { "==": [{ "var": "loan_name" }, "Loan Against Property"] }
					},
					{
						"label": "New Loan",
						"value": "New Loan",
						"showWhen": { "==": [{ "var": "loan_name" }, "Plot Loan"] }
					},
					{
						"label": "Balance Transfer Only",
						"value": "Balance Transfer Only",
						"showWhen": { "==": [{ "var": "loan_name" }, "Plot Loan"] }
					}
				],
				"showWhen": {
					"in": [{ "var": "loan_name" }, ["Plot Loan", "Loan Against Property"]]
				}
			},
			{
				"id": "loan_type_home",
				"bindsTo": "{{loanType_HL}}",
				"contextKey": "loanType_HL",
				"type": "radio",
				"required": true,
				"question": "What type of Home Loan are you planning?",
				"options": [
					{ "label": "New Loan", "value": "New Loan" },
					{ "label": "Balance Transfer With Top-up", "value": "Balance Transfer With Top-up" },
					{ "label": "Balance Transfer Only", "value": "Balance Transfer Only" },
					{ "label": "Top-up Only", "value": "Top-up Only" }
				],
				"showWhen": {
					"==": [{ "var": "loan_name" }, "Home Loan"]
				}
			},
			{
				"id": "loan_type_plot",
				"bindsTo": "{{loanType_PL}}",
				"contextKey": "loanType_PL",
				"type": "radio",
				"required": true,
				"question": "What type of Plot Loan are you planning?",
				"options": [
					{ "label": "Plot Loan Only", "value": "Plot Loan Only" },
					{ "label": "Plot & Construction Loan", "value": "Plot + Construction Loan" },
					{ "label": "Plot & Equity Loan", "value": "Plot + Equity Loan" },
					{ "label": "Construction Loan Only", "value": "Construction Loan Only" }
				],
				"showWhen": {
					"and": [
						{ "==": [{ "var": "loan_name" }, "Plot Loan"] },
						{ "==": [{ "var": "product_type" }, "New Loan"] }
					]
				}
			}
		]
	},
	"property-details": {
		"id": "property-details",
		"title": "Property Location",
		"questions": [
			{
				"id": "property_state_name",
				"bindsTo": "{{propertyStateName}}",
				"contextKey": "propertyStateName",
				"type": "select",
				"required": true,
				"question": "select state of property location",
				"uiMeta": {
					"placeholder": "Select State"
				},
				"options": {
					"dynamicSource": "getAllStates"
				}
			},
			{
				"id": "property_city_name",
				"bindsTo": "{{propertyCityName}}",
				"contextKey": "propertyCityName",
				"type": "select",
				"required": true,
				"question": "select city of property location",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": {
					"dynamicSource": "getCitiesForSelectedState",
					"dependsOn": "property_state_name"
				},
				"validation": { "errorMessage": "Please select a state first." }
			},
			{
				"id": "residence_option_same",
				"bindsTo": "{{residenceOptionSame}}",
				"contextKey": "residenceOptionSame",
				"type": "radio",
				"required": true,
				"question": "If the residence location is the same as the property location?",
				"info": "For an NRI applicant, this should be addressed from the perspective of the GPA (Power of Attorney).",
				"whyAsked": "why asked",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": [
					{
						"label": "Yes",
						"value": "Yes"
					},
					{
						"label": "No",
						"value": "No"
					}
				],
				"showWhen": {
					"state_and_city_selected": [
						{ "var": "property_state_name" },
						{ "var": "property_city_name" }
					]
				}
			},
			{
				"id": "residence_state_name",
				"bindsTo": "{{residenceStateName}}",
				"contextKey": "propertyStateName",
				"type": "select",
				"required": true,
				"question": "select state of residence location",
				"uiMeta": {
					"placeholder": "Select State"
				},
				"options": {
					"dynamicSource": "getAllStates"
				},
				"showWhen": {
					"==": [
						{
							"var": "residence_option_same"
						},
						"No"
					]
				}
			},
			{
				"id": "residence_city_name",
				"bindsTo": "{{residenceCityName}}",
				"contextKey": "residenceCityName",
				"type": "select",
				"required": true,
				"question": "select city of residence location",
				"uiMeta": {
					"placeholder": "Select City"
				},
				"options": {
					"dynamicSource": "getCitiesForSelectedState",
					"dependsOn": "property_state_name"
				},
				"validation": { "errorMessage": "Please select a state first." },
				"showWhen": {
					"==": [
						{
							"var": "residence_option_same"
						},
						"No"
					]
				}
			}
		]
	}
}
