			{
				"id": "unsecured_loan_type",
				"bindsTo": "{{unsecuredLoanType}}",
				"contextKey": "unsecuredLoanType",
				"type": "radio",
				"required": true,
				"uiMeta": {
					"placeholder": "Select loan type"
				},
				"question": "Select the form in which you want to avail this unsecured loan.",
				"info": "This helps us identify the most suitable loan structure for you. For details, check our Drop-line Overdraft (DOD) Page.",
				"whyAsked": "why asked",
